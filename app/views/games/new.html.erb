<h1>New game</h1>

<div class='flex'>
  <% @letters.each do |letter| %>
    <div class="inner">
      <%= letter %>
    </div>
  <% end %>
</div>


<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="word">
  <input type="submit" value="Play">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :grid, @letters %>
</form>
